<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextAppearanceTabLayout">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <declare-styleable name="TemplateView">
        <attr name="gnt_template_type" format="reference" />
    </declare-styleable>

    <style name="CustomTextViewAds">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/bg_text_ad</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>