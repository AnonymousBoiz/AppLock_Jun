<?xml version="1.0" encoding="utf-8"?>
<com.appanhnt.applocker.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_6sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    android:gravity="center"
    android:padding="@dimen/_1sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_12sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/iv_play"
        android:elevation="10dp"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_6sdp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_check_or_expand"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_action_image"
        android:elevation="5dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_6sdp"/>

</com.appanhnt.applocker.widget.SquareRelativeLayout>