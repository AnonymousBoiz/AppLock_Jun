<?xml version="1.0" encoding="utf-8"?>
<com.appanhnt.applocker.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_6sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    android:gravity="center"
    android:padding="@dimen/_1sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_12sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_check_or_expand"
        android:layout_width="@dimen/_18sdp"
        android:visibility="gone"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_action_image"
        android:elevation="5dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_6sdp"/>

</com.appanhnt.applocker.widget.SquareRelativeLayout>