<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.appanhnt.applocker.activity.setting.SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/ic_back_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/state_click_back"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back_activity_lock_app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:paddingEnd="0dp"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_back_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/llBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_feedback" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/feedback_or_suggestion"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:fontFamily="@font/nunito_bold"
                    android:maxLines="1"
                    android:text="@string/password"
                    android:textColor="#80FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    app:minTextSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPassType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_pass_type" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/password_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/llPatternDrop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtPasswordType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/_pattern"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/pattern_drowp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHidePattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_hide_pattern" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/hide_pattern_draw_path"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_hide_draw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:textOff=""
                            android:textOn=""
                            android:thumb="@drawable/thumb_lock_new_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:track="@drawable/track_selector" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_finger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:id="@+id/img_finger"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_finger" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/name_finger"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/use_finger"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swich_finger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:textOff=""
                            android:textOn=""
                            android:thumb="@drawable/thumb_lock_new_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:track="@drawable/track_selector" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnChangePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_change_pass" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/change_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:fontFamily="@font/nunito_bold"
                    android:maxLines="1"
                    android:text="@string/general"
                    android:textColor="#80FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    app:minTextSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStatusApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_app_lock" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            app:minTextSize="@dimen/_12sdp" />

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@string/turn_it_off_will_disable_app_lock"
                            android:textColor="#80FFFFFF"
                            android:textSize="@dimen/_10sdp"
                            app:minTextSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_app_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:textOff=""
                            android:textOn=""
                            android:thumb="@drawable/thumb_lock_new_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:track="@drawable/track_selector" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_vibration" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/vibration_on_input"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_vibration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:textOff=""
                            android:textOn=""
                            android:thumb="@drawable/thumb_lock_new_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:track="@drawable/track_selector" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRelock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_relock" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="2">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/relock_settings"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:id="@+id/llRelockSetting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txtRelock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/after_exit"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/pattern_drowp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:fontFamily="@font/nunito_bold"
                    android:maxLines="1"
                    android:text="@string/advanced"
                    android:textColor="#80FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    app:minTextSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/icon_camouflage_head"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUninstall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="10"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_lock_new_app">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_uninstall" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/uninstall_protection"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:textOff=""
                            android:textOn=""
                            android:thumb="@drawable/thumb_lock_new_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:track="@drawable/track_selector" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lock_new_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="10"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/setting">


                <ImageView
                    android:id="@+id/img_ic"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_setting_lock_newapp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:weightSum="7">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/nunito_semibold"
                        android:maxLines="1"
                        android:text="@string/lock_new_app"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:minTextSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_lock_app"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
